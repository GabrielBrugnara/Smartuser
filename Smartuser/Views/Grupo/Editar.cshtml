@model Smartuser.Models.Grupo

@{
    ViewData["Title"] = "Editar Grupo";
}

<h2>@ViewData["Title"]</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<!-- Formulário de edição, alinhado à esquerda -->
<form asp-action="Editar" method="post" id="formEditar" class="w-50 text-start">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <!-- Botão para abrir o modal de confirmação -->
    <div class="mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalConfirmarEdicao">
            Salvar Alterações
        </button>
    </div>
</form>

<div class="mt-3 text-start">
    <a asp-action="ListaGrupos" class="btn btn-secondary">Voltar para a lista</a>
</div>

<!-- Modal de Confirmação da Edição -->
<div class="modal fade" id="modalConfirmarEdicao" tabindex="-1" aria-labelledby="modalConfirmarEdicaoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalConfirmarEdicaoLabel">Confirmar Edição</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja salvar as alterações neste grupo?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <!-- Botão de salvar que dispara a função de confirmação -->
                <button type="button" class="btn btn-primary" onclick="confirmarEdicao()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEdicao() {
            document.getElementById("formEditar").submit();
        }
    </script>
}
