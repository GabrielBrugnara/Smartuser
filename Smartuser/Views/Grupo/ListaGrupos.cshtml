@model IEnumerable<Smartuser.Models.Grupo>

@{
    ViewData["Title"] = "Lista de Grupos";
}

<h2>Lista de Grupos</h2>

<!-- BOTÃO CRIAR GRUPO -->
<div class="text-start mb-3">
    <a href="@Url.Action("Criar", "Grupo")" class="btn btn-primary btn-sm">Criar Grupo</a>
</div>

<!-- Container com largura reduzida (40%) e alinhado à esquerda -->
<div style="width: 40%;" class="text-start">
    <!-- Tabela de Grupos com ajuste de colunas -->
    <table class="table table-striped table-bordered table-hover minha-tabela">
        <colgroup>
            <col style="width: 15%;">
            <col style="width: 55%;">
            <col style="width: 30%;">
        </colgroup>
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupo in Model)
            {
                <tr>
                    <td>@grupo.ID</td>
                    <td>@grupo.Nome</td>
                    <td>
                        <!-- Botão Editar -->
                        <a href="@Url.Action("Editar", "Grupo", new { id = grupo.ID })" class="btn btn-warning btn-sm">Editar</a>
                        <!-- Botão Deletar -->
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalDeletar" onclick="setGrupoIdDeletar(@grupo.ID)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Deletar -->
<div class="modal fade" id="modalDeletar" tabindex="-1" aria-labelledby="modalDeletarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDeletarLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja excluir este grupo?
            </div>
            <div class="modal-footer">
                <form id="formDeletar" method="post">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setGrupoIdDeletar(grupoId) {
            var formDeletar = document.getElementById("formDeletar");
            formDeletar.action = '/Grupo/Delete/' + grupoId;
        }
    </script>
}
