@model IEnumerable<Smartuser.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<div class="text-start mb-3">
    <a href="@Url.Action("Criar", "Cliente")" class="btn btn-primary btn-sm">Criar Cliente</a>
</div>

<table class="table table-striped table-bordered table-hover minha-tabela">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>CPF/CNPJ</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.ID</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Sobrenome</td>
                <td>@cliente.CPFCNPJ</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefone</td>
                <td>
                    <a href="@Url.Action("Editar", "Cliente", new { id = cliente.ID })" class="btn btn-warning btn-sm">Editar</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalDeletar" onclick="setClienteIdDeletar(@cliente.ID)">Excluir</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalDeletar" tabindex="-1" aria-labelledby="modalDeletarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalDeletarLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja excluir este cliente?
            </div>
            <div class="modal-footer">
                <form id="formDeletar" method="post">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setClienteIdDeletar(clienteId) {
            var formDeletar = document.getElementById("formDeletar");
            formDeletar.action = '/Cliente/Delete/' + clienteId;
        }
    </script>
}
