@model Smartuser.Models.Cliente

@{
    ViewData["Title"] = "Criar Cliente";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Criar" method="post" class="w-50 text-start">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" required />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sobrenome" class="form-label"></label>
        <input asp-for="Sobrenome" class="form-control" required />
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CPFCNPJ" class="form-label"></label>
        <input asp-for="CPFCNPJ" class="form-control" required />
        <span asp-validation-for="CPFCNPJ" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Telefone" class="form-label"></label>
        <input asp-for="Telefone" class="form-control" required />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>

    <!-- Botões no padrão correto -->
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Criar</button>
        <a asp-action="ListaClientes" class="btn btn-secondary ms-2">Voltar para a lista</a>
    </div>
</form>
