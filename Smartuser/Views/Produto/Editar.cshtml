@model Smartuser.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post" class="w-50" id="formEditarProduto">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <input asp-for="Descricao" class="form-control" required />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="GrupoProdutoID" class="form-label">Grupo</label>
        <select class="form-control" id="GrupoProdutoID" name="GrupoProdutoID" required>
            <option value="">Selecione um Grupo</option>
            @foreach (var grupo in ViewBag.Grupos)
            {
                <option value="@grupo.ID" selected="@(grupo.ID == Model.GrupoProdutoID)">
                    @grupo.Nome
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="QuantidadeEstoque" class="form-label">Quantidade em Estoque</label>
        <input asp-for="QuantidadeEstoque" type="number" class="form-control" required />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço</label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalConfirmarSalvar">
            <i class="bi bi-check-circle"></i> Salvar
        </button>
        <a href='@Url.Action("ListaDeProdutos", "Produto")' class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancelar
        </a>
    </div>

    <!-- Modal de confirmação para salvar alterações -->
    <div class="modal fade" id="modalConfirmarSalvar" tabindex="-1" aria-labelledby="modalConfirmarSalvarLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmarSalvarLabel">
                        <i class="bi bi-exclamation-triangle-fill text-warning"></i> Confirmar Alterações
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    Tem certeza de que deseja salvar as alterações feitas neste produto?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Confirmar
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
