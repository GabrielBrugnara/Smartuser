@model Smartuser.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="alert alert-warning w-50">
    <i class="bi bi-exclamation-triangle-fill"></i>
    Tem certeza que deseja excluir o seguinte usuário?
</div>

<table class="table table-bordered w-50">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Nome</th>
        <td>@Model.Nome</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>@Model.Username</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Data de Criação</th>
        <td>@Model.DataCriacao.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Última Atualização</th>
        <td>@(Model.DataUltimaAtualizacao?.ToString("dd/MM/yyyy") ?? "N/A")</td>
    </tr>
</table>

<form asp-action="Deletar" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Excluir
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>
