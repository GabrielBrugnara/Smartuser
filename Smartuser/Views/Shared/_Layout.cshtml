<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Smart User</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            height: 100%;
            background-color: #343a40;
            padding-top: 20px;
            transition: 0.3s;
            overflow-y: auto;
        }

            .sidebar a {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
                display: block;
                font-size: 18px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

            .sidebar img {
                margin-bottom: 20px;
                margin-left: 10px;
            }

        .content {
            margin-left: 220px;
            padding: 20px;
            width: calc(100% - 220px);
        }

        .header {
            background-color: #343a40;
            color: white;
            padding: 0 15px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            left: 220px;
            width: calc(100% - 220px);
            position: fixed;
            top: 0;
            z-index: 1030;
        }

            .header h2 {
                font-size: 20px;
                margin: 0;
            }
    </style>
</head>
<body>

    <!-- MENU LATERAL -->
    <div class="sidebar" id="sidebar">
        <!-- Logotipo -->
        <img src='@Url.Content("~/images/logo.png")' alt="Logo ERP"
             style="width: 180px; height: 60px; object-fit: cover; border-radius: 8px; margin-bottom: 20px;">

        <!-- Botões -->
        <a href='@Url.Action("Index", "Home")'><i class="bi bi-house"></i> <span>Atalhos</span></a>
        <a href='@Url.Action("Index", "Usuario")'><i class="bi bi-person"></i> <span>Usuários</span></a>
        <a href='@Url.Action("ListaClientes", "Cliente")'><i class="bi bi-person-lines-fill"></i> <span>Clientes</span></a>
        <a href='@Url.Action("ListaDeFaturas", "Fatura")'><i class="bi bi-receipt"></i> <span>Faturamento</span></a>

        <!-- Submenu Estoque -->
        <div class="estoque-item" style="width: 100%;">
            <a href='@Url.Action("ListaDeProdutos", "Produto")'
               class="d-flex align-items-center justify-content-between estoque-link"
               style="width: 100%; padding: 10px 15px; font-size: 18px; color: white; text-decoration: none;">
                <span>
                    <i class="bi bi-boxes"></i> <span>Estoque</span>
                </span>
                <span class="estoque-arrow" style="cursor: pointer; padding-left: 5px;">
                    <i class="bi bi-chevron-down"></i>
                </span>
            </a>

            <div class="collapse" id="estoqueSubmenu">
                <a href='@Url.Action("ListaGrupos", "GrupoProduto")' style="padding: 10px 30px;">
                    <i class="bi bi-collection"></i> <span>Grupos</span>
                </a>
                <a href='@Url.Action("RegistroDeEstoque", "MovimentacaoEstoque")' style="padding: 10px 30px;">
                    <i class="bi bi-arrow-left-right"></i> <span>Movimentações</span>
                </a>
            </div>
        </div>
    </div>

    <!-- CABEÇALHO FIXO -->
    <div class="header">
        <h2 id="page-title"><i class="bi bi-pc-display"></i> Erp Inteligente Para Seu Negocio!</h2>
    </div>

    <!-- CONTEÚDO PRINCIPAL -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var arrow = document.querySelector(".estoque-arrow");
            arrow.addEventListener("click", function (e) {
                e.preventDefault();
                e.stopPropagation();
                var submenu = document.getElementById("estoqueSubmenu");
                var collapseInstance = bootstrap.Collapse.getInstance(submenu);
                if (collapseInstance) {
                    collapseInstance.toggle();
                } else {
                    new bootstrap.Collapse(submenu, { toggle: true });
                }
            });
        });
    </script>

    @RenderSection("Scripts", false)

</body>
</html>
