@model Smartuser.Models.Item

@{
    ViewData["Title"] = "Editar Item";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post" id="formEditar" class="w-50">
    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Grupo</label>
        <select class="form-control" id="GrupoID" name="GrupoID">
            <option value="">Selecione um Grupo</option>
            @foreach (var grupo in ViewBag.Grupos)
            {
                if (Model.Grupo != null && Model.Grupo.ID == grupo.ID)
                {
                    <option value="@grupo.ID" selected="selected">@grupo.Nome</option>
                }
                else
                {
                    <option value="@grupo.ID">@grupo.Nome</option>
                }
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="QuantidadeEstoque" class="form-label">Quantidade em Estoque</label>
        <input asp-for="QuantidadeEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Preco" class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <!-- Botão para abrir o modal de confirmação -->
    <div class="mb-3">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalConfirmarEdicao">
            Salvar Alterações
        </button>
    </div>
</form>

<div class="mt-3">
    <a href='@Url.Action("ListaDeEstoque", "Item")' class="btn btn-secondary">Voltar para a lista</a>
</div>

<!-- Modal de Confirmação da Edição -->
<div class="modal fade" id="modalConfirmarEdicao" tabindex="-1" aria-labelledby="modalConfirmarEdicaoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalConfirmarEdicaoLabel">Confirmar Edição</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja salvar as alterações neste item?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="confirmarEdicao()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarEdicao() {
            document.getElementById("formEditar").submit();
        }
    </script>
}
